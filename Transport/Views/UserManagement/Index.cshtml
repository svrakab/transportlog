@model Transport.Models.GroupedUserViewModel

@{
    ViewBag.Title = "User Managment";
}

@Styles.Render("~/Content/css")



<div class="">
    <h3 class="col-md-6">Users List</h3>
  
    <div class="col-md-3">
        @Html.ActionLink("Deleted...", "", new { }, new { @class = "btn btn-default btn-leftmargin btn-floatright" })
    </div>
    <div class="col-md-3">
        @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-default btn-leftmargin btn-floatright" })
    </div>
</div>


<table class="table">
    <tr>
        <th>
            Actions
        </th>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            City
        </th>
        <th>
            Country
        </th>
        <th>
            Phone
        </th>
        <th>
            Role
        </th>
    </tr>

    @{
        var i = 0;
        foreach (var user in Model.Users)
        {
    <tr style="background-color:@(i%2 == 1 ? "grey;" : "white;")">
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-default" })
        </td>
        <td>
            @user.FirstName @user.LastName
        </td>
        <td>
            @user.Address @user.StreetNumber
        </td>
        <td>
            @user.City
        </td>
        <td>
            @user.Country
        </td>
        <td>
            @user.Phone
        </td>
        <td>
            @user.RoleName
        </td>
        
    </tr>
            i++;
        }
    }
    @{
        var j = 0;
        foreach (var user2 in Model.Admins)
        {
    <tr style="background-color:@(j%2 == 1 ? "grey;" : "white;")">
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = user2.Id }, new { @class = "btn btn-default" })
        </td>
        <td>
            @user2.FirstName @user2.LastName
        </td>
        <td>
            @user2.Address @user2.StreetNumber
        </td>
        <td>
            @user2.City
        </td>
        <td>
            @user2.Country
        </td>
        <td>
            @user2.Phone
        </td>
        <td>
            @user2.RoleName
        </td>
    </tr>
            j++;
        }
    }
</table>








@model IEnumerable<Transport.Models.Dock>

@{
    ViewBag.Title = "Index";
    ViewBag.AppName = "Transport Log";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Docks</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-secondary" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DockNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DockNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }, new { @class = "btn btn-secondary"} ) 
            @Html.ActionLink("Details", "Details", new { id=item.ID }, new { @class = "btn btn-secondary" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }, new { @class = "btn btn-secondary" })
        </td>
    </tr>
}

</table>

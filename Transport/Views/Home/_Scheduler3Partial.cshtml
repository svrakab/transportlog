@using Transport.Controllers;

@{
    var scheduler = Html.DevExpress().Scheduler(settings => {
        settings.Name = "Scheduler3";
        settings.CallbackRouteValues = new { Controller = "Home", Action = "Scheduler3Partial" };
        settings.EditAppointmentRouteValues = new { Controller = "Home", Action = "Scheduler3PartialEditAppointment" };

        settings.Storage.EnableReminders = false;
		settings.Storage.Appointments.Assign(HomeControllerScheduler3Settings.AppointmentStorage);
        settings.Storage.Resources.Assign(HomeControllerScheduler3Settings.ResourceStorage);
    });
    if (ViewData["SchedulerErrorText"] != null) {
        scheduler.SetErrorText((string)ViewData["SchedulerErrorText"]);
    }
}
@scheduler.Bind(ViewData["Appointments"], ViewData["Resources"]).GetHtml()